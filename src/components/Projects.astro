---
import Section from "./Section.astro"

import { projects } from "@cv"
---

<Section title="Projects">
<ul>
  {
    projects.map(
    ({url, description,highlights,name,isActive}) => {
    return(
      <li>
          <article>
            <header>

              <h3>
              <a href={url} title={`Ver el proyecto ${name}`}>
                {name}
              </a>
              {
                isActive && <span>&bull;</span>
              }

              </h3>

              <p>{description}</p>
            </header>

            <footer >
              
                {
                  highlights.map(
                    (highlight) => {
                      return(<span>{highlight}</span>
                      )
                    }
                  )
                }
              
            </footer>
            
          </article>
          </li>
        )
      }
    
    )
  }
</ul>
</Section>

<style>
  ul{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article{
    border:1px solid #f2f2f2;
    border-radius:8px;
    padding:16px;
    gap:16px;
    height: 100%;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
  }
  article header{
   flex:1;
  }

  article h3{
   
  }

  article h3 span{
    color:rgb(0, 179, 6);
  }
  article a{
    color:#111;
    text-decoration:none;
  }

  article a:hover{
    text-decoration: underline;
  }

  footer{
    display: flex;
    flex-wrap:wrap ;
    gap:4px;
    font-size: 0.6rem;
  }
  
  article p {

    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    }

  footer span{
    background:#eee;
    border-radius:6px;
    font-size: .8rem;
    font-weight:500;
    color:#444;
    padding:0.2rem 0.6rem;
    
  }
  
</style>