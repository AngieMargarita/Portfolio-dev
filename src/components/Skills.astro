---
import Section from "./Section.astro"

import { skills } from "@cv"
---

<Section title="Skills">
<ul>
  {
    skills.map(
    ({name}) => {
    return(
      <li>
          <span>{name}</span>
          </li>
        )
      }
    
    )
  }
</ul>
</Section>

<style>
  ul{
    display: inline-flex;
    gap:8px;
    flex-wrap: wrap;
  }

  li{
    background:#eee;
    border-radius:6px;
    font-size: .8rem;
    font-weight:500;
    color:black;
    padding:0.2rem 0.6rem;
  }
</style>